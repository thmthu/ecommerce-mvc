                              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="#" onclick="loadPage(<%= i %>)"><%= i %></a>
                              </li>
                            <% } %>
                          </ul>
                        </nav>
                      </div>
                    </div>
