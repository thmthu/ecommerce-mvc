<!-- Shop Start -->
<div class="container-fluid pt-5">
  <div class="row px-xl-5">
    <!-- Shop Sidebar Start -->
    <div class="col-lg-3 col-md-12">
      <!-- Price Start -->
      <div class="border-bottom mb-4 pb-4">
        <form action="/shop" method="GET">
          <h5 class="font-weight-semi-bold mb-4">Search and Filter</h5>
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="search"
              id="search"
              placeholder="Search for products..."
              value="<%= searchQuery %>"
            />
          </div>
          <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="price-1"
            name="price" value="0-50" <%= price.includes('0-50') ? 'checked' :
            '' %>/>
            <label class="custom-control-label" for="price-1">$0 - $50</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="price-2"
            name="price" value="50-100" <%= price.includes('50-100') ? 'checked'
            : '' %>/>
            <label class="custom-control-label" for="price-2">$50 - $100</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="price-3"
            name="price" value="100-150" <%= price.includes('100-150') ?
            'checked' : '' %>/>
            <label class="custom-control-label" for="price-3"
              >$100 - $150</label
            >
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="price-4"
            name="price" value="150-200" <%= price.includes('150-200') ?
            'checked' : '' %>/>
            <label class="custom-control-label" for="price-4"
              >$150 - $200</label
            >
          </div>
          <!-- Price End -->

          <!-- Color Start -->
          <h5 class="font-weight-semi-bold mb-4">Filter by color</h5>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="color-1"
            name="color" value="Black" <%= color.includes('Black') ? 'checked' :
            '' %>/>
            <label class="custom-control-label" for="color-1">Black</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="color-2"
            name="color" value="White" <%= color.includes('White') ? 'checked' :
            '' %>/>
            <label class="custom-control-label" for="color-2">White</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="color-3"
            name="color" value="Red" <%= color.includes('Red') ? 'checked' : ''
            %>/>
            <label class="custom-control-label" for="color-3">Red</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="color-4"
            name="color" value="Blue" <%= color.includes('Blue') ? 'checked' :
            '' %>/>
            <label class="custom-control-label" for="color-4">Blue</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between"
          >
            <input type="checkbox" class="custom-control-input" id="color-5"
            name="color" value="Green" <%= color.includes('Green') ? 'checked' :
            '' %>/>
            <label class="custom-control-label" for="color-5">Green</label>
          </div>
          <!-- Color End -->

          <!-- Size Start -->
          <h5 class="font-weight-semi-bold mb-4 mt-4">Filter by size</h5>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="size-1"
            name="size" value="XS" <%= size.includes('XS') ? 'checked' : '' %>/>
            <label class="custom-control-label" for="size-1">XS</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="size-2"
            name="size" value="S" <%= size.includes('S') ? 'checked' : '' %>/>
            <label class="custom-control-label" for="size-2">S</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="size-3"
            name="size" value="M" <%= size.includes('M') ? 'checked' : '' %>/>
            <label class="custom-control-label" for="size-3">M</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="size-4"
            name="size" value="L" <%= size.includes('L') ? 'checked' : '' %>/>
            <label class="custom-control-label" for="size-4">L</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between"
          >
            <input type="checkbox" class="custom-control-input" id="size-5"
            name="size" value="XL" <%= size.includes('XL') ? 'checked' : '' %>/>
            <label class="custom-control-label" for="size-5">XL</label>
          </div>
          <!-- Size End -->

          <!--Gender Start-->
          <h5 class="font-weight-semi-bold mb-4 mt-4">Filter by gender</h5>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="gender-1"
            name="gender" value="MaleClothe" <%= gender.includes('MaleClothe') ?
            'checked' : '' %>/>
            <label class="custom-control-label" for="gender-1">Male</label>
          </div>
          <div
            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3"
          >
            <input type="checkbox" class="custom-control-input" id="gender-2"
            name="gender" value="FemaleClothe" <%=
            gender.includes('FemaleClothe') ? 'checked' : '' %>/>
            <label class="custom-control-label" for="gender-2">Female</label>
          </div>
          <!--Gender End-->

          <button type="submit" class="btn btn-primary mt-4">
            Apply Filters
          </button>
        </form>
      </div>
    </div>
    <!-- Shop Sidebar End -->

    <!-- Shop Product Start -->
    <div class="col-lg-9 col-md-12">
      <div class="row pb-3">
        <div class="col-12 pb-1">
          <div class="d-flex align-items-center justify-content-between mb-4">
            <div class="custom-dropdown ml-auto">
              <div class="btn border dropbtn">Sort by</div>
              <div class="custom-dropdown-content">
                <a
                  class="dropdown-item"
                  href="#"
                  onclick="sortProducts('latest')"
                  >Latest</a
                >
                <a
                  class="dropdown-item"
                  href="#"
                  onclick="sortProducts('lPrice')"
                  >Lowest Price</a
                >
                <a
                  class="dropdown-item"
                  href="#"
                  onclick="sortProducts('hPrice')"
                  >Highest Price</a
                >
              </div>
            </div>
          </div>
        </div>
        <div class="row" id="product-list">
          <%- include('./partials/products-list', {products: products}) %>
        </div>
        <div class="row">
          <div class="col-12">
            <nav>
              <ul class="pagination justify-content-end row" id="pagination">
                <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                  <a
                    class="page-link"
                    href="#"
                    onclick="loadPage(<%= currentPage - 1 %>, '<%= sortBy %>')"
                    aria-label="Previous"
                  >
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                  </a>
                </li>
                <li class="page-item <%= currentPage == 1 ? 'active' : '' %>">
                  <a
                    class="page-link"
                    href="#"
                    onclick="loadPage(1, '<%= sortBy %>')"
                    >1</a
                  >
                </li>
                <% if (totalPages > 1) { %> <% if (totalPages > 2) { %> <% if
                (currentPage > 2 && currentPage < totalPages - 1) { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">...</a>
                </li>
                <% } else { %>
                <li class="page-item <%= currentPage == 2 ? 'active' : '' %>">
                  <a
                    class="page-link"
                    href="#"
                    onclick="loadPage(2, '<%= sortBy %>')"
                    >2</a
                  >
                </li>
                <% } %> <% if (totalPages > 3) { %> <% if (totalPages > 4 &&
                (currentPage <= 2 || currentPage >= totalPages - 1)) { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">...</a>
                </li>
                <% } else if (totalPages > 4) { %>
                <li class="page-item active disabled">
                  <a class="page-link" href="#"><%= currentPage %></a>
                </li>
                <% } %> <% if (currentPage > 2 && currentPage < totalPages - 1)
                { %>
                <li class="page-item disabled">
                  <a class="page-link" href="#">...</a>
                </li>
                <% } else { %>
                <li
                  class="page-item <%= currentPage == totalPages - 1 ? 'active' : '' %>"
                >
                  <a
                    class="page-link"
                    href="#"
                    onclick="loadPage(<%= totalPages - 1 %>, '<%= sortBy %>')"
                    ><%= totalPages - 1 %></a
                  >
                </li>
                <% } %> <% } %> <% } %>
                <li
                  class="page-item <%= currentPage == totalPages ? 'active' : '' %>"
                >
                  <a
                    class="page-link"
                    href="#"
                    onclick="loadPage(<%= totalPages %>, '<%= sortBy %>')"
                    ><%= totalPages %></a
                  >
                </li>
                <% } %>
                <li
                  class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>"
                >
                  <a
                    class="page-link"
                    href="#"
                    onclick="loadPage(<%= currentPage + 1 %>, '<%= sortBy %>')"
                    aria-label="Next"
                  >
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
        <!-- <div class="col-12 pb-1">
                        <nav aria-label="Page navigation">
                          <ul class="pagination justify-content-center mb-3">
                            <li class="page-item disabled">
                              <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                              <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          </ul>
                        </nav>
                    </div> -->
      </div>
    </div>
    <!-- Shop Product End -->
  </div>
</div>
<script src="./js/loadPage.js"></script>
<script src="./js/addToCart.js"></script>
